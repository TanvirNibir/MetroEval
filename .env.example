# =============================================================================
# MetroEval - Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Flask Secret Key (REQUIRED in production)
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-change-in-production

# Flask Environment: development, production, or testing
FLASK_ENV=development

# Server Configuration
PORT=5001
HOST=0.0.0.0

# -----------------------------------------------------------------------------
# Database Configuration (MongoDB)
# -----------------------------------------------------------------------------

# Option 1: Use MongoDB URI (recommended for production)
# Format: mongodb://[username:password@]host[:port][/database][?options]
MONGODB_URI=mongodb://localhost:27017/afprs

# Option 2: Use individual components (alternative to MONGODB_URI)
# If MONGODB_URI is set, these will be ignored
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DB=afprs

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# Comma-separated list of allowed CORS origins
# In production, only these origins will be allowed
# In development, these will be combined with default localhost origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# -----------------------------------------------------------------------------
# AI Service Configuration
# -----------------------------------------------------------------------------

# Google Gemini API Key (required for AI-powered features like Tutor Chat)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# -----------------------------------------------------------------------------
# Rate Limiting Configuration
# -----------------------------------------------------------------------------

# Redis URL for rate limiting storage (optional)
# Defaults to in-memory storage if not set
# Format: redis://[password@]host[:port][/database]
# For production, use Redis: redis://localhost:6379/0
REDIS_URL=memory://

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Allow students to review their own submissions (for testing/small setups)
# Set to 'true' to enable, 'false' to disable (default: false)
ALLOW_SELF_REVIEW=false

# -----------------------------------------------------------------------------
# Optional: Logging Configuration
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
